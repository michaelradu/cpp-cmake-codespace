{
  "name": "C++ CMake Codespace",
  "image": "mcr.microsoft.com/devcontainers/cpp:1",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postCreateCommand": "cmake -S . -B build && cmake --build build",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ]
    }
  }
}
